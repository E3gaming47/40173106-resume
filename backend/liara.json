{
  "platform": "python",
  "port": 80,
  "build": {
    "commands": [
      "pip install -r requirements.txt",
      "mkdir -p static",
      "cp ../index.html static/ 2>/dev/null || true",
      "cp ../portfolio.html static/ 2>/dev/null || true",
      "cp ../admin.html static/ 2>/dev/null || true",
      "cp ../styles.css static/ 2>/dev/null || true",
      "cp ../portfolio.css static/ 2>/dev/null || true"
    ]
  },
  "start": {
    "command": "uvicorn main:app --host 0.0.0.0 --port 80 --workers 1"
  }
}

